<div class="search-container">
  <div class="event-images m-3">
    <%= image_tag(@event.photo) if @event.photo.present? %>
  </div>
  <div class="event-details m-3">
    <h3><%= @event.name %></h3>
    <h4><%= '⭐️' * @event.rating.to_i %></h4>
    <%= @event.address %>
    <p><%= link_to 'Visit Website', @event.website, target: :_blank  if @event.website.present? %></p>
    <p><em>Suggested duration:</em> <%= @event.duration.to_i %> hours</p>
    <h4><%= '💸' * @event.price.to_i if @event.price.present? %></h4>
    <br>
    <p><%= link_to 'Back to Results', itinerary_path(params[:itinerary_id]), class: 'btn-event' %></p>
  </div>
</div>

<div class="search-container">
  <div class="event-images m-3">
    <%= image_tag(@event.photo) if @event.photo.present? %>
  </div>
  <div class="event-details m-3">
    <h3><%= @event.name %></h3>
    <h4><%= 'â­‘' * @event.rating.to_i %></h4>
    <%= @event.address %>
    <p><%= link_to 'Visit Website', @event.website, target: :_blank  if @event.website.present? %></p>
    <p><em>Suggested duration:</em> <%= @event.duration.to_i %> hr</p>
    <h4><%= 'ðŸ’¸' * @event.price.to_i if @event.price.present? %></h4>

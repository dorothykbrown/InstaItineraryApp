<div class="itin-container">
<h4>My Itineraries</h4>

  <div class="itin-show p-3">
    <% @itineraries.each do |itinerary| %>

      <div class="itin-images">
      <%= itinerary.name %>
        <% itinerary.events.take(3).each do |event| %>
          <%= image_tag(event.photo) if event.photo.present? %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

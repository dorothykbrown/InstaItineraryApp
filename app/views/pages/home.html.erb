<div class="container p-3">
  <%= flash[:error] %>
  <div class="search-container">
    <%= form_for :search, url: new_itinerary_path, method: :get do |f| %>
      <div class="search-wrapper">
        <div class="search-form-control form-group">
          <input placeholder="Enter starting location" class="form-control string required" type="text" name="query"
        id="search_query"/>
          <div class="i">
            <i class="fas fa-search"></i>
          </div>
        </div>

        <% if @search_error == true %>
          <small class="text-danger">Please enter a location</small>
        <% end %>
      </div>
      <div class="cards">
        <% Category.all.each do |category| %>
          <input type="checkbox" class="d-none" value="<%= category.name %>" name="post[category_ids][]" id="post_category_ids_<%= category.name %>">
          <label class="card-category" style="background-image: url(<%= category.image_url %>);" for="post_category_ids_<%= category.name %>">
            <p><%= category.name %></p>
          </label>
        <% end %>
      </div>
      <%= f.submit "Submit Categories", class: "btn-flat"  %>
    <% end %>
  </div>
</div>
